CREATE DEFINER=`sharon`@`%` TRIGGER `supply_AFTER_UPDATE` AFTER UPDATE ON `supply` FOR EACH ROW BEGIN
	update streamrail_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
    update Cedato_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
    update Direct_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
    update SpringServe_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
    update streamrail_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
	update LKQD_data set supply_am=NEW.am_name_id where supply = NEW.supply_name;
    
END


CREATE DEFINER=`sharon`@`%` TRIGGER `demand_AFTER_UPDATE` AFTER UPDATE ON `demand` FOR EACH ROW BEGIN
	update streamrail_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
    update LKQD_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
    update Cedato_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
    update Direct_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
    update SpringServe_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
    update streamrail_data set demand_am=NEW.am_name_id where demand = NEW.demand_name;
END